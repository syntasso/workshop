#!/usr/bin/env sh

# To speed up the workshop this fakes the output
# for a real example of a security scanning image:
# - https://github.com/syntasso/kratix-marketplace/tree/main/pipeline-marketplace-images/snyk
# - https://github.com/syntasso/kratix-marketplace/tree/main/pipeline-marketplace-images/trivy

version=$(yq ".spec.version" /kratix/output/mongodb-instance.yaml)

echo """
Found follow images:
- docker.io/mongo:$version

Scanning images for vulnerabilities
...
...
...
0 vulnerabilities found
"""

echo "{vulnerabilities: \"no vulnterability found!\"}" > /kratix/metadata/status.yaml
